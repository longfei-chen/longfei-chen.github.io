---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
<div class="frontmatter-style">
    {frontmatter.image       && <img src={frontmatter.image.url} width="800" alt={frontmatter.image.alt} />}
    {<h1>{frontmatter.title}</h1>}
    {frontmatter.author      && <p>Author: {frontmatter.author}</p>}
    {frontmatter.pubDate     && <p>Published on: {frontmatter.pubDate.slice(0,10)}</p>}
    {frontmatter.description && <p>Summary: <em>{frontmatter.description}</em></p>}

    <div class="tags">
        <p>Tags: {frontmatter.tags.map((tag) => (
        <a class="tag" href={`/tags/${tag}`}>#{tag}</a>
        ))}
        </p>
    </div>
</div>

<hr />
<slot />
</BaseLayout>

<style>
    a {
        color: #00539F;
    }

    
    
</style>
